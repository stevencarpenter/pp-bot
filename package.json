{
  "name": "pp-bot",
  "version": "1.1.0",
  "description": "A Slack bot that manages a leaderboard of users with ++ and -- voting",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "migrate": "ts-node src/scripts/migrate.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "node -e \"console.log('Linting disabled by project configuration.');\"",
    "lint:fix": "node -e \"console.log('Linting disabled by project configuration.');\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "test:integration": "npm run build && npm run db:up && wait-on tcp:5433 && DATABASE_URL=postgres://ppbot:ppbot@localhost:5433/ppbot ts-node src/scripts/migrate.ts && DATABASE_URL=postgres://ppbot:ppbot@localhost:5433/ppbot jest src/__tests__/db.integration.test.ts --runInBand && npm run db:down",
    "ci": "npm ci && npm run build && npm test",
    "lock:regen": "rm -f package-lock.json && npm install --package-lock-only"
  },
  "keywords": [
    "slack",
    "bot",
    "leaderboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "dotenv": "^17.2.3",
    "pg": "^8.17.2",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "pg-mem": "^3.0.8",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
